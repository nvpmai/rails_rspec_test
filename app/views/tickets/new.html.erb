<div class="container-fluid tickets-buy">
  <div class="row tickets-header">
    <div class="col-xs-12 col-md-11 col-md-offset-1">
      <h3> <%= @event.name %> </h3>
      <div class="pull-left">
        <%= fa_icon 'map-marker' %>
      </div>
      <div class="venue-details">
       <%= @event.venue.name %>
       <br/>
       <%= @event.venue.full_address %>
      </div>

      <div class="pull-left">
        <%= fa_icon 'clock-o' %>
      </div>
      <div class="time-details"> 
        <%= @event.starts_at.strftime('%A, %d %b %Y %l:%M %p') %> 
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-11 col-md-offset-1">  
    <%= form_tag(buy_event_tickets_path) do %> 
      <table class="table">
        <th> Ticket Type </th>
        <th> Unit Price </th>
        <th> Quantity </th>
        <th>Available</th>
        <% @event.ticket_types.each do |type| %>
          <tr>
            <td><%= type.name %></td>
            <td><%= number_to_currency(type.price, unit: 'VND ', precision: 0) %></td>
            <td><%= select_tag("quantities[#{type.id}]", options_for_select(0..10)) %></td> 
            <td><%= type.max_quantity %></td>
          </tr>
        <% end %>
      </table>
      <button class="col-md-2 col-md-offset-5 btn btn-success" type="submit">Buy</button>
    <% end %> 
    </div>
  </div>
  <div class="row">
    <div class="col-md-2 col-md-offset-5">
      
    </div>
  <div>
</div>  

