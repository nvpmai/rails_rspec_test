<h3>New event</h3>
<%= simple_form_for @event do |f| %>
  <%= f.input :name %>
  <%= f.input :category_id, collection: @categories, label_method: :name, value_method: :id %>
  <%= f.input :venue_id, collection: @venues, label_method: :name, value_method: :id %>
  <%= f.input :starts_at %>
  <%= f.input :ends_at %>
  <%= f.input :hero_image_url %>
  <%= f.input :extended_html_description %>

  <h4>Ticket types:</h4>
  <%= f.fields_for :ticket_types do |type| %>
  <div class="form-inline" role="form">
    <div class="form-group">
      <%= type.label :name %>
      <%= type.text_field :name, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= type.label :price %>
      <%= type.number_field :price, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= type.label :max_quantity %>
      <%= type.number_field :max_quantity, class: 'form-control' %>
    </div>
  </div>
  <% end %>
  
  <%= f.button :submit %>
<% end %>